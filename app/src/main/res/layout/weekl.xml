<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/weekbackid">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weekly"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/option_week">
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="S"
            android:onClick="csu"
            android:id="@+id/c1"
            />
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="M"
            android:onClick="cmo"
            android:id="@+id/c2"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="T"
            android:onClick="ctu"
            android:id="@+id/c3"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="W"
            android:onClick="cwe"
            android:id="@+id/c4"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="T"
            android:onClick="cth"
            android:id="@+id/c5"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="F"
            android:onClick="cfr"
            android:id="@+id/c6"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="S"
            android:onClick="csa"
            android:id="@+id/c7"/>
        <Button
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Done"
            android:onClick="modweek"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/week_view"
        >
    </ListView>
</LinearLayout>
</android.support.constraint.ConstraintLayout>