<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:hint="List title..."
                android:id="@+id/takecategory"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="SAVE"
                    android:background="@drawable/round"
                    android:onClick="insert"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/lightcolor">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/intro"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:text="You can manage your bucket list and todo list here.
 You can manage what you have done and not done so far. "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/coverlinear">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="show">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="home">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="setting">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="exit">

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txt1"
                android:layout_marginLeft="3dp"
                android:layout_alignParentBottom="true"
                android:text="Show"
                android:onClick="show"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Home"
                android:id="@+id/txt2"
                android:layout_toRightOf="@+id/txt1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:onClick="home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txt3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Exit"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="10dp"
                android:onClick="exit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Menu"
                android:id="@+id/txt4"
                android:layout_toLeftOf="@+id/txt3"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:onClick="setting"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:id="@+id/extbtn"
                android:textSize="20sp"
                android:background="@drawable/round"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:onClick="extend"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>